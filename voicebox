#!/bin/bash
# VoiceBox launcher script
# GUI mode is the default. Use --cli for command-line mode.

# Get the directory where this script is located
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Change to script directory
cd "$SCRIPT_DIR"

# Run VoiceBox with uv (handles virtual environment)
uv run python3 src/main.py "$@"
